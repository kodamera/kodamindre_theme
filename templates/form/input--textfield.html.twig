{%
  set classes = [
    'w-full',
    'max-w-full',
    'border-2',
    'border-solid',
    'border-gray-300',
    'p-4',
    'rounded-md',
    'text-sm',
    'transition',
    'outline-none',
    'focus:outline-none',
    'hover:border-blue-500',
    'focus:border-blue-500',
  ]
%}
<input{{ attributes.addClass(classes) }} />{{ children }}
