{% if context.list_style %}
  {% set list_attributes = attributes.addClass('list-style-none mt-4 divide-y divide-solid') %}
{% endif %}
{%- if items or empty -%}
  {%- if title is not empty -%}
    <h3 class="mt-6 text-lg md:text-xl lg:text-2xl">{{ title }}</h3>
  {%- endif -%}
  {%- if items -%}
    <{{ list_type }}{{ list_attributes }}>
    {%- for item in items -%}
      <li {{ item.attributes.addClass('block mt-4 first:mt-0') }}>{{ item.value }}</li>
    {%- endfor -%}
    </{{ list_type }}>
  {%- else -%}
    {{- empty -}}
  {%- endif -%}
{%- endif %}
