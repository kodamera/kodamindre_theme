{%
  set classes = [
    'c-tabs',
    primary ? 'c-tabs--primary',
    secondary ? 'c-tabs--secondary'
  ]
%}
{%
  set list_classes = [
    'c-tabs__list',
    logged_in ? 'c-tabs__list--admin',
    not logged_in ? 'c-tabs__list--public',
    primary ? 'c-tabs__list--primary',
    secondary ? 'c-tabs__list--secondary',
    'flex',
    'list-style-none',
    '-mx-4  ',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  <div class="c-tabs__wrapper">
    {% if primary %}
      <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
      <ul{{ attributes.removeClass(tabs_classes).addClass(list_classes) }}>{{ primary }}</ul>
    {% endif %}
    {% if secondary %}
      <h2 class="visually-hidden">{{ 'Secondary tabs'|t }}</h2>
      <ul{{ attributes.removeClass(tabs_classes).addClass(list_classes) }}>{{ secondary }}</ul>
    {% endif %}
  </div>
</div>
